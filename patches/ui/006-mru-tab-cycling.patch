+void TabStripModel::SelectMRUTab(TabRelativeDirection direction,
+                                 TabStripUserGestureDetails detail) {
+  if (mru_cycle_list_.empty()) {
+    Browser* browser = chrome::FindBrowserWithTab(GetWebContentsAt(0));
+    if (!browser) {
+      return;
