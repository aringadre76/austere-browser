+  SkColor bg_color = IsActive() ? kAustereTabActiveColor : kAustereTabInactiveColor;
+  if (IsMouseHovered()) {
+    bg_color = kAustereTabHoverColor;
+  }
+  
+  // Draw custom rounded background
+  cc::PaintFlags flags;
+  flags.setColor(bg_color);
+  flags.setStyle(cc::PaintFlags::kFill_Style);
+  flags.setAntiAlias(true);
