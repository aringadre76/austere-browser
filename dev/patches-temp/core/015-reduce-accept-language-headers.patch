 // found in the LICENSE file.
@@ -27,6 +29,11 @@ std::string GetAcceptLanguageHeader(const std::string& raw_accept_language) {
   std::string accept_language = raw_accept_language;
   base::TrimWhitespaceASCII(accept_language, base::TRIM_ALL, &accept_language);

+  // Austere: Only use primary language (first part before comma) to reduce header size
+  size_t comma_pos = accept_language.find(',');
+  if (comma_pos != std::string::npos) {
+    accept_language = accept_language.substr(0, comma_pos);
+  }
+
   return accept_language;
 }
